@Html.Partial("Shared/_Header")

<div class="main">
    <div class="container">
        <article id="liste-campagnes" class="chapter">
            <h2>Liste des campagnes d’une association par son slug</h2>
            <section>
                <h3>Requête</h3>
<pre class="language-markup">
<code class="language-markup">
GET https://api.helloasso.com/v3/public/organizations/{slug}/campaigns.json[?type=&lt;EVENT|FORM|FUNDRAISER|MEMBERSHIP&gt;&page=&lt;page&gt;&results_per_page=&lt;results_per_page&gt;]
</code>
</pre>
            </section>
            <section>
                <h3>Paramètres</h3>
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Paramètre</th>
                                <th>Description</th>
                                <th>Requis</th>
                                <th>Format</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>slug</strong></td>
                                <td>Le slug de l’organisme détenteur des campagnes</td>
                                <td>Oui</td>
                                <td>string</td>
                            </tr>
                            <tr>
                                <td><strong>type</strong></td>
                                <td>Le type de campagnes à récupérer</td>
                                <td>Non</td>
                                <td>EVENT|FORM|FUNDRAISER |MEMBERSHIP</td>
                            </tr>
                            <tr>
                                <td><strong>page</strong></td>
                                <td>Page qu’on veut retourner (1 par défaut)</td>
                                <td>Non</td>
                                <td>int</td>
                            </tr>
                            <tr>
                                <td><strong>results_per_page</strong></td>
                                <td>Nombre de résultats par page (20 par défaut)</td>
                                <td>Non</td>
                                <td>int</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <p>Réponse : Une collection des <a href="responses#campagnes-basiques" target="_blank">campagnes basiques</a>.</p>
<pre class="language-json">
<code class="language-json">
{
	"resources": [
		{
			"name": "string",
			"slug": "string",
			"type": "string",
			"url": "string",
			"url_widget": "string",
			"url_bouton": "string",
			"name_organism": "string",
			"slug_organism": "string"
		}
		…
	]
}
</code>
</pre>
            </section>
        </article>
    </div>
